default_platform(:ios)

APP_IDENTIFIER   = "com.nogeass.passalarm"
FASTFILE_DIR     = File.dirname(File.realpath(__FILE__))
PROJECT_DIR      = File.expand_path("../../apps/ios", FASTFILE_DIR)
METADATA_PATH    = File.expand_path("metadata", FASTFILE_DIR)
SCREENSHOTS_PATH = File.expand_path("screenshots", FASTFILE_DIR)
KEYS_DIR         = File.expand_path("../../fastlane/keys", FASTFILE_DIR)

# ---------------------------------------------------------------------------
# Helper: App Store Connect API Key
#   CI    → ASC_PRIVATE_KEY env var (base64-encoded .p8 content)
#   Local → fastlane/keys/AuthKey.p8 file
# ---------------------------------------------------------------------------
def asc_api_key_params
  params = {
    key_id:    ENV.fetch('ASC_KEY_ID', 'R7PF52F527'),
    issuer_id: ENV.fetch('ASC_ISSUER_ID', '44f2cad6-60e5-437b-8a28-a830872fc253'),
  }
  if ENV['ASC_PRIVATE_KEY']
    params[:key_content] = ENV['ASC_PRIVATE_KEY']
    params[:is_key_content_base64] = true
  else
    params[:key_filepath] = "#{KEYS_DIR}/AuthKey.p8"
  end
  params
end

# ---------------------------------------------------------------------------
# gym options for app-store builds
#   CI    → manual signing with pre-installed profile (PROVISIONING_PROFILE_UUID)
#   Local → automatic signing
# ---------------------------------------------------------------------------
def setup_manual_signing_if_ci
  return unless ENV['PROVISIONING_PROFILE_UUID']
  update_code_signing_settings(
    use_automatic_signing: false,
    path: "#{PROJECT_DIR}/PassAlarm.xcodeproj",
    team_id: "NDWFYRF8Y5",
    profile_uuid: ENV['PROVISIONING_PROFILE_UUID'],
    code_sign_identity: "Apple Distribution",
    bundle_identifier: APP_IDENTIFIER
  )
end

def appstore_gym_options
  opts = {
    project: "#{PROJECT_DIR}/PassAlarm.xcodeproj",
    scheme: "PassAlarm",
    clean: true,
    export_method: "app-store",
  }
  if ENV['PROVISIONING_PROFILE_UUID']
    opts[:export_options] = {
      signingStyle: "manual",
      provisioningProfiles: {
        APP_IDENTIFIER => ENV['PROVISIONING_PROFILE_UUID']
      }
    }
  end
  opts
end

platform :ios do
  desc "Build the app"
  lane :build do
    gym(
      project: "#{PROJECT_DIR}/PassAlarm.xcodeproj",
      scheme: "PassAlarm",
      clean: true,
      export_method: "development",
      skip_codesigning: true,
      destination: "generic/platform=iOS Simulator"
    )
  end

  desc "Run unit tests"
  lane :test do
    scan(
      project: "#{PROJECT_DIR}/PassAlarm.xcodeproj",
      scheme: "PassAlarm",
      devices: ["iPhone 15"],
      clean: true,
      code_coverage: true
    )
  end

  desc "Deploy beta to TestFlight"
  lane :beta do |options|
    version = options[:version] || "0.0.1"
    api_key = app_store_connect_api_key(asc_api_key_params)

    increment_version_number(
      version_number: version,
      xcodeproj: "#{PROJECT_DIR}/PassAlarm.xcodeproj"
    )
    increment_build_number(
      xcodeproj: "#{PROJECT_DIR}/PassAlarm.xcodeproj"
    )
    setup_manual_signing_if_ci
    gym(**appstore_gym_options)
    pilot(
      api_key: api_key,
      app_identifier: APP_IDENTIFIER,
      skip_waiting_for_build_processing: true
    )
  end

  desc "Capture screenshots on simulators"
  lane :screenshots do
    capture_screenshots(
      project: "#{PROJECT_DIR}/PassAlarm.xcodeproj",
      scheme: "PassAlarm",
      output_directory: SCREENSHOTS_PATH,
      clear_previous_screenshots: true,
      override_status_bar: true,
      devices: [
        "iPhone 16 Pro Max",
        "iPhone 16 Pro",
        "iPhone SE (3rd generation)",
        "iPad Pro 13-inch (M4)",
      ],
      languages: ["ja", "en-US"]
    )
  end

  desc "Upload metadata only (no binary)"
  lane :upload_metadata do
    api_key = app_store_connect_api_key(asc_api_key_params)
    deliver(
      api_key: api_key,
      app_identifier: APP_IDENTIFIER,
      metadata_path: METADATA_PATH,
      screenshots_path: SCREENSHOTS_PATH,
      skip_binary_upload: true,
      submit_for_review: false,
      force: true,
      precheck_include_in_app_purchases: false
    )
  end

  desc "Deploy to App Store and submit for review"
  lane :release do |options|
    version = options[:version] || "1.0.0"
    api_key = app_store_connect_api_key(asc_api_key_params)

    increment_version_number(
      version_number: version,
      xcodeproj: "#{PROJECT_DIR}/PassAlarm.xcodeproj"
    )
    increment_build_number(
      xcodeproj: "#{PROJECT_DIR}/PassAlarm.xcodeproj"
    )
    setup_manual_signing_if_ci
    gym(**appstore_gym_options)
    deliver(
      api_key: api_key,
      app_identifier: APP_IDENTIFIER,
      metadata_path: METADATA_PATH,
      screenshots_path: SCREENSHOTS_PATH,
      submit_for_review: true,
      automatic_release: true,
      force: true,
      precheck_include_in_app_purchases: false
    )
  end
end
